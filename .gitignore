# ignore bundler config.
/.bundle

# ignore swap files
.DS_Store
*.swp

# ignore the default SQLite database.
/db/*.sqlite3
/db/*.sqlite3-journal

# ignore database schema (autogenerated)
/db/schema.rb
/db/structure.sql

# ignore database configuration
/config/database.yml

# ignore secrets configuration
/config/secrets.yml

# ignore Pompa configuration
/config/pompa.yml

# ignore Sidekiq configuration
/config/sidekiq.yml

# ignore all logfiles and tempfiles but keep directory structure
/log/*
!/log/.keep
/tmp/*
!/tmp/.keep
!/tmp/sockets/
!/tmp/pids/
/tmp/sockets/*
!/tmp/sockets/.keep
/tmp/pids/*
!/tmp/pids/.keep
/public/system
!/public/system/.keep
/vendor/*
!/vendor/.keep
!/vendor/cache/
/vendor/cache/*
!/vendor/cache/.keep

# ignore all uploads
/private/*
!/private/.keep
/storage/*
!/storage/.keep

# ignore revision mark
/config/initializers/revision.rb

# ignore rvm config
/.ruby-gemset
/.ruby-version
